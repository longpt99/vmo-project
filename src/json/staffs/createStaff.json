{
  "title": "Staff",
  "type": "object",
  "required": [
    "email",
    "password",
    "name",
    "dob",
    "identityNumber",
    "phoneNumber"
  ],
  "properties": {
    "email": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "pattern": "[a-zA-Z]+$"
    },
    "dob": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "minLength": 10,
      "maxLength": 10
    },
    "address": {
      "type": "string"
    },
    "identityNumber": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "minLength": 12,
      "maxLength": 12
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "certs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "projectsId": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "techStackId": {
            "type": "string"
          },
          "level": {
            "type": "string",
            "enum": ["fresher", "junior", "senior"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
